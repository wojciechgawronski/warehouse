{% extends 'dashboard/index.html.twig' %}

{% block title %}{{ parent() }} - Register{% endblock %}

{% block dashboardBody %}
    {% if is_granted('ROLE_ADMIN') %}

        <h2>Register user</h2>

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr' : {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(registrationForm.name, {'attr' : {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(registrationForm.Roles, {'attr' : {'class': 'form-select'}}) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(registrationForm.plainPassword, {'attr' : {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary my-2">Register</button>
        {{ form_end(registrationForm) }}
                
    {% endif %}
{% endblock %}
