            {{ form_row(form.amountInStock, {'attr': {'class': "form-control is-invalid"}}) }}
        {% endif %}
    </div>

    <div class="form-group mt-2">
        {% if form_errors(form.unitMeasurment) is empty %}
            {{ form_row(form.unitMeasurment, {'attr': {'class': 'form-control'}}) }}
